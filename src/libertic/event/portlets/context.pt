<dl
  tal:define="template_id template/getId;
  portal  here/portal_url/getPortalObject;
  normalizeString nocall:context/@@plone/normalizeString;
  toLocalizedTime nocall:context/@@plone/toLocalizedTime;
  portal_properties context/portal_properties;
  site_properties context/portal_properties/site_properties;
  here_url context/@@plone_context_state/object_url;
  portal_url here/portal_url;
  theme_url string:${portal_url}/++theme++libertic.event;
  img_url string:${theme_url}/images;
  home portal/portal_membership/getHomeUrl;
  db_url view/db_url;
  is_supplier view/is_supplier;
  isAnon context/@@plone_portal_state/anonymous;"
  class="portlet portlet-libertic-context"
  i18n:domain="libertic.event">
  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <span>
      Actions
    </span>
    <span class="portletTopRight"></span>
  </dt>
  <dd class="portletItem login" tal:condition="isAnon">
    <a class="loginurl" href="" i18n:translate=""
      tal:attributes="href string:${portal_url}/login_form" >Login</a>
  </dd>
  <dd class="portletItem home" tal:condition="python:( not isAnon  ) and home">
    <ul>
      <li>
        <a class="homeurl" tal:attributes="href ${home}/my-events">
          <img width="64" height="64" title="home" i18n:attributes="title" tal:attributes="src string:${img_url}/picto-home-30.png" />
        </a>
      </li>
      <li >
        <a class="seek" tal:attributes="href string:db_url">
          <img width="64" height="64" title="find" i18n:attributes="title" tal:attributes="src string:${img_url}/picto-search-30.png" />
        </a>
      </li>
    </ul>
  </dd>
  <dd class="portletItem download" tal:condition="view/is_operator">
    <!--
    <p i18n:translate="">Download the database</p>
    -->
    <ul>
      <li><a class="xml" tal:attributes="href string:${db_url}/eventsasxml"  >
        <img tal:attributes="src string:${img_url}/icon-xml.png" alt="XML" title="Download as XML" i18n:attributes="title"/>
        <p>xml</p>
      </a></li>
      <li><a class="json" tal:attributes="href string:${db_url}/eventsasjson">
        <img tal:attributes="src string:${img_url}/icon-json.png" alt="JSON" title="Download as JSON" i18n:attributes="title"/>
        <p>json</p>
      </a></li>
      <li><a  class="ical icon-calendar" tal:attributes="href string:${db_url}/eventsasical">
        <img tal:attributes="src string:${img_url}/icon-ical.png" alt="ICAL" title="Downloas as ICAL" i18n:attributes="title"/>
        <p>ical</p>
      </a></li>
      <li><a class="csv" tal:attributes="href string:${db_url}/eventsascsv"  >
        <img tal:attributes="src string:${img_url}/icon-csv.png" alt="CSV" title="Download as CSV" i18n:attributes="title"/>
        <p>csv</p>
      </a></li>
      <div class="visualClear"></div>
    </ul>
  </dd>
  <dd class="portletItem add-content" tal:condition="view/is_supplier">
    <!--
    <p i18n:translate="">Add content</p>
    -->
    <ul>
      <li class="event">
        <a tal:attributes="href string:${db_url}/++add++libertic_event" title="Add an event" >
          <img width="32" height="32" title="add" i18n:attributes="title" tal:attributes="src string:${img_url}/picto-add-30.png" />
          <p i18n:translate="">portlet_add_event</p>
        </a>
      </li>
      <li class="source">
        <a tal:attributes="href string:${db_url}/++add++libertic_source" title="Add a source" >
          <img width="32" height="32" title="add" i18n:attributes="title" tal:attributes="src string:${img_url}/picto-add-30.png" />
          <p i18n:translate="">portlet_add_source</p>
        </a>
      </li>
    </ul>
  </dd>
  <dd class="portletFooter">
    <span class="portletBottomLeft"></span>
    <span> </span>
    <span class="portletBottomRight"></span>
  </dd>
</dl>
